<h2> <%= @category.name %> </h2>
  <% if session[:id] != nil %>
  <%= link_to 'Create new article', new_article_path %>
  <% end %>

<ul>
<% @category.articles.each do |article| %>
<!-- Q. Is it necessary to pass objects or can we pass only IDs -->
  <li> <%= link_to article.title, category_article_path(@category, article) %> </li>
<% end %>
</ul>
